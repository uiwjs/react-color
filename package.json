{
  "private": true,
  "scripts": {
    "bundle": "lerna exec \"ncc build src/index.tsx --target web --filename color\" --scope @uiw/react-color",
    "bundle:watch": "lerna exec \"ncc watch src/index.tsx --target web --filename color\" --scope @uiw/react-color",
    "bundle:min": "lerna exec \"ncc build src/index.tsx --target web --filename color --minify\" --scope @uiw/react-color",
    "⬇️⬇️⬇️⬇️⬇️ watch ⬇️⬇️⬇️⬇️⬇️": "▼▼▼▼▼ watch::package ▼▼▼▼▼",
    "watch:all": "lerna exec --parallel --scope @uiw/* -- tsbb watch",
    "watch:color": "lerna exec --parallel --scope @uiw/react-color-block -- tsbb watch",
    "watch:alpha": "lerna exec --parallel --scope @uiw/react-alpha -- tsbb watch",
    "⬆️⬆️⬆️⬆️⬆️ watch ⬆️⬆️⬆️⬆️⬆️": "▲▲▲▲▲ watch::package ▲▲▲▲▲",
    "build": "lerna exec --scope @uiw/* -- tsbb build",
    "start": "lerna exec --scope website -- npm run start",
    "doc": "lerna exec --scope website -- npm run build",
    "test": "tsbb test --env=jsdom",
    "coverage": "tsbb test --coverage --bail",
    "prepare": "husky install",
    "publish": "lerna publish from-package --yes --no-verify-access",
    "version": "lerna version --exact --force-publish --no-push --no-git-tag-version",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "remove": "npm run clean && lerna exec \"rm -rf package-lock.json\" --scope @uiw/* --scope website",
    "clean": "lerna clean --yes"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,less,md,json}": [
      "prettier --write"
    ]
  },
  "license": "MIT",
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/packages/**/*.{tsx,ts}",
      "!**/*.{js,d.ts}"
    ],
    "coverageReporters": [
      "lcov",
      "json-summary"
    ],
    "testMatch": [
      "<rootDir>/test/*.{ts,tsx}"
    ]
  },
  "workspaces": [
    "packages/**",
    "website"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "~12.1.5",
    "@kkt/less-modules": "^7.2.0",
    "@kkt/ncc": "^1.0.13",
    "@types/react": "~18.0.0",
    "@types/react-dom": "~18.0.0",
    "@types/react-test-renderer": "~18.0.0",
    "husky": "~7.0.4",
    "lint-staged": "~12.5.0",
    "lerna": "^5.1.0",
    "prettier": "~2.7.0",
    "react": "~18.2.0",
    "react-dom": "~18.2.0",
    "react-test-renderer": "~18.2.0",
    "tsbb": "~3.7.0"
  }
}
